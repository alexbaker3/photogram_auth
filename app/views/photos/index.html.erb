<div class="panel panel-default">
<div class="panel-heading">

    <a href="/photos/new" class="btn btn-lg btn-success"><i class="fa fa-plus" aria-hidden="true"></i></a>


</div>


<div class="panel panel-default">
  <div class="panel-col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Caption</th>
        <th>Image</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.caption %></td>
        <td><%= photo.image %></td>
        <td><%= photo.user_id %></td>
        <td>
          <a href="/photos/<%= photo.id %>" class="btn btn-primary">Show</a>

          <% if current_user.liked_photos.ids.include? photo.id %>

            <a href="/delete_like/<%= photo.likes.find_by(:user_id => current_user.id).id %>"><i class="fa fa-heart"></i></a>

            <% else %>

          <a href="/create_like/"><i class="fa fa-heart-o" aria-hidden="true"></i> <input type="hidden" id="user_id" name="user_id" value="<%= current_user.id %>"> <input type="hidden" id="user_id" name="photo_id" value="<%= photo.id %>"> </a>
          <% end %>
          <a href="/delete_photo/<%= photo.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
</div>
